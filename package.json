{
	"name": "chatbot-dashboard",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"format": "biome format --write ./src",
		"lint:check": "biome lint ./src",
		"lint:apply": "biome check --write ./src",
		"lint": "pnpm format && pnpm lint:check && pnpm lint:apply",
		"prepare": "husky"
	},
	"dependencies": {
		"@hookform/resolvers": "5.0.1",
		"@radix-ui/react-avatar": "1.1.10",
		"@radix-ui/react-dialog": "1.1.14",
		"@radix-ui/react-icons": "1.3.2",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-popover": "1.1.14",
		"@radix-ui/react-slot": "1.2.3",
		"@tailwindcss/vite": "4.1.7",
		"@tanstack/react-query": "5.77.2",
		"axios": "1.7.3",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"lucide-react": "0.511.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-hook-form": "7.56.4",
		"react-icons": "5.5.0",
		"react-router-dom": "7.6.1",
		"sonner": "2.0.3",
		"tailwind-merge": "3.3.0",
		"tailwindcss-animate": "1.0.7",
		"vite-plugin-vercel": "^9.0.7",
		"zod": "3.25.31",
		"zustand": "5.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.15.23",
		"@types/react": "19.1.6",
		"@types/react-dom": "19.1.5",
		"@vitejs/plugin-react-swc": "3.10.0",
		"autoprefixer": "10.4.21",
		"husky": "9.1.7",
		"lint-staged": "16.1.0",
		"postcss": "8.5.3",
		"tailwindcss": "4.1.7",
		"tw-animate-css": "1.3.0",
		"typescript": "5.8.3",
		"vite": "6.3.5"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome format --write --no-errors-on-unmatched",
			"biome lint --apply --no-errors-on-unmatched",
			"biome check --files-ignore-unknown=true",
			"biome check --apply --no-errors-on-unmatched",
			"biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched",
			"biome check --apply-unsafe --no-errors-on-unmatched"
		]
	}
}
